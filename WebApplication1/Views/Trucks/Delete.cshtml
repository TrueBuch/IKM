@model WebApplication1.Models.Truck
@{
    ViewData["Title"] = "Удалить грузовик";
}

<h1 class="text-danger mb-3">Удалить грузовик</h1>

<div class="alert alert-warning">
    Вы уверены, что хотите удалить грузовик
    <b>@Model.Brand @Model.Model (@Model.PlateNumber)</b>?
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)

    <button class="btn btn-danger">Удалить</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>
