<!DOCTYPE html>
<html lang="ru" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />

    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />

    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body class="d-flex flex-column min-vh-100">

<nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
    <div class="container">

        <button class="navbar-toggler" type="button"
                data-bs-toggle="collapse"
                data-bs-target="#mainNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="mainNavbar">

            <ul class="navbar-nav mx-auto mb-2 mb-lg-0">

                <li class="nav-item">
                    <a class="nav-link text-warning"
                       asp-controller="Home"
                       asp-action="Index"
                       title="На главную">
                        <i class="bi bi-house"></i>  
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Drivers" asp-action="Index">
                        <i class="bi bi-person-badge"></i> Водители
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Trucks" asp-action="Index">
                        <i class="bi bi-truck-flatbed"></i> Грузовики
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Cargos" asp-action="Index">
                        <i class="bi bi-box-seam"></i> Грузы
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Routes" asp-action="Index">
                        <i class="bi bi-signpost-2"></i> Маршруты
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Trips" asp-action="Index">
                        <i class="bi bi-map"></i> Рейсы
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link text-warning"
                       asp-controller="Home"
                       asp-action="RefreshStatuses"
                       title="Пересчитать статусы">
                          <i class="bi bi-arrow-clockwise"></i>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<main class="flex-fill">
    <div class="container my-4">
        @RenderBody()
    </div>
</main>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

@RenderSection("Scripts", required: false)
</body>
</html>
