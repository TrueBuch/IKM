@model Home
@{
    ViewData["Title"] = "Главная";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-12 col-xl-10">
                <div class="row g-4">
                    <div class="col-lg-4">
                        <div class="card shadow-sm border-0 h-100">
                            <div class="card-body px-4 py-4">

                                <h5 class="fw-bold mb-4 text-center fs-4">
                                    Сводка
                                </h5>

                                <div class="mb-4">
                                    <div class="text-muted small">Активные рейсы</div>
                                    <div class="fs-3 fw-bold text-success">
                                        @Model.ActiveTrips
                                    </div>
                                </div>

                                <div class="mb-4">
                                    <div class="text-muted small">Свободные водители</div>
                                    <div class="fs-3 fw-bold text-primary">
                                        @Model.FreeDrivers
                                    </div>
                                </div>

                                <div class="mb-4">
                                    <div class="text-muted small">Грузовики в рейсе</div>
                                    <div class="fs-3 fw-bold text-warning">
                                        @Model.BusyTrucks
                                    </div>
                                </div>

                                <div class="mb-4">
                                    <div class="text-muted small">Грузы в пути</div>
                                    <div class="fs-3 fw-bold text-info">
                                        @Model.CargosInTransit
                                    </div>
                                </div>

                                <hr />

                                <div class="text-muted small text-center">
                                    Данные из базы данных
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-8">
                        <div class="row row-cols-1 row-cols-md-1 g-3">

                            <div class="col">
                                <div class="card h-100 shadow-sm border-0 text-center">
                                    <div class="card-body py-3 d-flex flex-column">
                                        <h6 class="text-muted mb-2">
                                            Водители <span class="fw-bold text-light">[@Model.DriversCount]</span>
                                        </h6>
                                        <a asp-controller="Drivers" asp-action="Index"
                                        class="btn btn-outline-primary btn-sm mt-auto">
                                            Перейти
                                        </a>
                                    </div>
                                </div>
                            </div>

                            <div class="col">
                                <div class="card h-100 shadow-sm border-0 text-center">
                                    <div class="card-body py-3 d-flex flex-column">
                                        <h6 class="text-muted mb-2">
                                            Грузовики <span class="fw-bold text-light">[@Model.TrucksCount]</span>
                                        </h6>
                                        <a asp-controller="Trucks" asp-action="Index"
                                        class="btn btn-outline-primary btn-sm mt-auto">
                                            Перейти
                                        </a>
                                    </div>
                                </div>
                            </div>

                            <div class="col">
                                <div class="card h-100 shadow-sm border-0 text-center">
                                    <div class="card-body py-3 d-flex flex-column">
                                        <h6 class="text-muted mb-2">
                                            Грузы <span class="fw-bold text-light">[@Model.CargosCount]</span>
                                        </h6>
                                        <a asp-controller="Cargos" asp-action="Index"
                                        class="btn btn-outline-primary btn-sm mt-auto">
                                            Перейти
                                        </a>
                                    </div>
                                </div>
                            </div>

                            <div class="col">
                                <div class="card h-100 shadow-sm border-0 text-center">
                                    <div class="card-body py-3 d-flex flex-column">
                                        <h6 class="text-muted mb-2">
                                            Маршруты <span class="fw-bold text-light">[@Model.RoutesCount]</span>
                                        </h6>
                                        <a asp-controller="Routes" asp-action="Index"
                                        class="btn btn-outline-primary btn-sm mt-auto">
                                            Перейти
                                        </a>
                                    </div>
                                </div>
                            </div>

                            <div class="col">
                                <div class="card h-100 shadow-sm border-0 text-center">
                                    <div class="card-body py-3 d-flex flex-column">
                                        <h6 class="text-muted mb-2">
                                            Рейсы <span class="fw-bold text-light">[@Model.TripsCount]</span>
                                        </h6>
                                        <a asp-controller="Trips" asp-action="Index"
                                        class="btn btn-outline-primary btn-sm mt-auto">
                                            Перейти
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>